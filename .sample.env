# ==============================================================================
# BROKER CONFIGURATION
# ==============================================================================
# Supported Brokers: zerodha, fyers, dhan, upstox
# Choose one and fill in the corresponding credentials below
# ==============================================================================

BROKER_NAME=<INPUT_YOUR_BROKER_NAME>  # Options: zerodha, fyers, dhan, upstox

# ==============================================================================
# ZERODHA CONFIGURATION
# ==============================================================================
# Required for Zerodha:
# - BROKER_API_KEY: Your Zerodha API key from https://kite.trade/
# - BROKER_API_SECRET: Your Zerodha API secret
# - BROKER_ID: Your Zerodha client ID
# - BROKER_PASSWORD: Your Zerodha password
# - BROKER_TOTP_KEY: Your TOTP secret key (if using TOTP login)
# - BROKER_TOTP_ENABLE: Set to 'true' for TOTP login, 'false' for manual login
# ==============================================================================

# ==============================================================================
# FYERS CONFIGURATION
# ==============================================================================
# Required for Fyers:
# - BROKER_API_KEY: Your Fyers API key (app_id)
# - BROKER_API_SECRET: Your Fyers API secret
# - BROKER_ID: Your Fyers client ID
# - BROKER_TOTP_KEY: Your TOTP secret key
# - BROKER_TOTP_PIN: Your Fyers PIN
# - BROKER_TOTP_REDIDRECT_URI: Your redirect URI
# - BROKER_TOTP_ENABLE: Must be 'true' for Fyers
# ==============================================================================

# ==============================================================================
# DHAN CONFIGURATION
# ==============================================================================
# Required for Dhan:
# - BROKER_ID: Your Dhan client ID
# - BROKER_API_KEY: Your Dhan access token from https://dhanhq.co/
# Note: Dhan uses simpler authentication - no TOTP required
# ==============================================================================

# ==============================================================================
# UPSTOX CONFIGURATION
# ==============================================================================
# Required for Upstox:
# - BROKER_API_KEY: Your Upstox API key from https://upstox.com/developer/
# - BROKER_API_SECRET: Your Upstox API secret
# - BROKER_REDIRECT_URI: Your OAuth redirect URI (default: http://localhost)
# - BROKER_ACCESS_TOKEN: (Optional) Pre-generated access token
# Note: Upstox uses OAuth2 authentication
# ==============================================================================

# Common Configuration (fill based on your chosen broker)
BROKER_API_KEY=<INPUT_YOUR_API_KEY>
BROKER_API_SECRET=<INPUT_YOUR_API_SECRET>
BROKER_ID=<INPUT_YOUR_BROKER_ID>
BROKER_PASSWORD=<INPUT_YOUR_BROKER_PASSWORD>

# TOTP Configuration (for Zerodha/Fyers)
BROKER_TOTP_ENABLE=false
BROKER_TOTP_KEY=<INPUT_YOUR_TOTP_KEY>
BROKER_TOTP_PIN=<INPUT_YOUR_TOTP_PIN>
BROKER_TOTP_REDIDRECT_URI=<INPUT_YOUR_TOTP_REDIRECT_URI>

# OAuth Configuration (for Upstox)
BROKER_REDIRECT_URI=http://localhost
BROKER_ACCESS_TOKEN=<INPUT_YOUR_ACCESS_TOKEN_IF_AVAILABLE>